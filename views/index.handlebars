<div class="container mb-4">

  <div class="row justify-content-center">
    <img src="assets/imgs/burgerSign.webp">
  </div>

  <div class="chalkboard pt-4 pb-4 mt-5 mb-5">


    <h2>Burgers of the Day!</h2>


    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block eaten=true}}
    {{/unless}}
    {{/each}}

    <h2>Past Burgers</h2>

    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block eaten=false}}
    {{/if}}
    {{/each}}

  </div>

  <form class="create-form">
    <div class="form-group create-form">
      <div class="row justify-content-center">
        <label for="burger-name" class="col-form-label-lg "><h3>Add your own burger!</h3></label>
        </div>
      <div class="col-sm-8 offset-2">
        <input type="text" class="form-control form-control-lg text-center" id="burger-name" placeholder="Burger Name">
      </div>
    </div>
    <div class="row justify-content-center">
    <button type="submit" class="btn btn-primary">Add Burger</button>
    </div>
  </form>


